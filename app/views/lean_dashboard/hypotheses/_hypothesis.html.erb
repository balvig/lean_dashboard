<%= div_for(hypothesis, class: 'span6') do %>
  <div class="clearfix">
    <h2 class="pull-left"><%= link_to hypothesis.title, [:edit, hypothesis] %></h2>
    <small class="muted pull-right">
      <% if Time.now < hypothesis.ends_at %>
        <%= distance_of_time_in_words_to_now(hypothesis.ends_at) %> left
      <% else %>
        Done (<%= hypothesis.ends_at.to_date %>)
      <% end %>
     </small>
  </div>
  <p><%= hypothesis.description %></p>
  <table class='table metrics'>
    <tr>
      <th width='30%'>Cohort</th>
      <th width='50%'>Indicator</th>
      <th class="result-header" width='10%'>Result</th>
      <th class="result-header" width='10%'>Goal</th>
    </tr>
    <tr>
      <td class="cohort"><%= render hypothesis.cohort %></td>
      <td class="indicator"><%= render hypothesis.indicator %></td>
      <td class="result"><%= hypothesis.indicator.value %></td>
      <td class="result"><%= hypothesis.goal %></td>
    </tr>
  </table>
<% end %>
